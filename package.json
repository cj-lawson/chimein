{
  "name": "chimein",
  "private": true,
  "type": "module",
  "scripts": {
    "dev:client": "vite",
    "dev:functions": "vercel dev --listen 3001",
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:functions\"",
    "start": "vite --port 3000",
    "build": "vite build && tsc",
    "serve": "vite preview",
    "test": "vitest run",
    "lint": "eslint",
    "format": "prettier",
    "check": "prettier --write . && eslint --fix"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@tailwindcss/vite": "^4.0.6",
    "@tanstack/react-router": "^1.114.3",
    "@tanstack/react-router-devtools": "^1.114.3",
    "@tanstack/router-vite-plugin": "^1.120.5",
    "@upstash/redis": "^1.35.1",
    "motion": "^12.16.0",
    "nanoid": "^5.1.5",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hot-toast": "^2.5.2",
    "react-qr-code": "^2.0.18",
    "redis": "^5.6.0",
    "redis-cli": "^2.1.2",
    "tailwindcss": "^4.0.6"
  },
  "devDependencies": {
    "@tanstack/eslint-config": "^0.1.0",
    "@tanstack/router-plugin": "^1.120.11",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.2.0",
    "@types/node": "^24.1.0",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vercel/node": "^5.1.16",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "jsdom": "^26.0.0",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vite": "^6.1.0",
    "vitest": "^3.0.5",
    "web-vitals": "^4.2.4"
  }
}
